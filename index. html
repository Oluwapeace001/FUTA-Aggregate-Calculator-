<body>

  <h1>FUTA Aggregate Calculator</h1>

  <div class="calculator">
    <label for="utme">UTME Score (out of 400):</label>
    <input type="number" id="utme" min="0" max="400" placeholder="Enter UTME score">

    <label for="postutme">Post-UTME Score (out of 100):</label>
    <input type="number" id="postutme" min="0" max="100" placeholder="Enter Post-UTME score">

    <button onclick="calculateAggregate()">Calculate Aggregate</button>

    <div id="output" class="result"></div>
  </div>

  <script>
    function calculateAggregate() {
      const utme = parseFloat(document.getElementById("utme").value);
      const postUtme = parseFloat(document.getElementById("postutme").value);
      const output = document.getElementById("output");

      // Validation
      if (isNaN(utme) || isNaN(postUtme) || utme < 0 || utme > 400 || postUtme < 0 || postUtme > 100) {
        output.textContent = "Please enter valid scores within range!";
        output.className = "result invalid";
        return;
      }

      const aggregate = (utme / 8) + (postUtme / 2);
      const rounded = aggregate.toFixed(2);

      let statusClass = "valid";
      let message = `Your FUTA Aggregate Score is ${rounded}%`;

      if (aggregate < 60) {
        statusClass = "invalid";
        message += " (Below competitive cutoff)";
      } else if (aggregate < 70) {
        statusClass = "borderline";
        message += " (Moderate chance)";
      } else {
        statusClass = "valid";
        message += " (Good chance)";
      }

      output.textContent = message;
      output.className = `result ${statusClass}`;
    }
  </script>

</body>
