  <script>
    function calculateAggregate() {
      const utme = parseFloat(document.getElementById("utme").value);
      const postUtme = parseFloat(document.getElementById("postUtme").value);

      if (isNaN(utme) || isNaN(postUtme)) {
        document.getElementById("result").textContent = "Please enter both scores.";
        return;
      }

      if (utme < 0 || utme > 400 || postUtme < 0 || postUtme > 100) {
        document.getElementById("result").textContent = "Scores must be within valid ranges.";
        return;
      }

      const aggregate = (utme / 8) + (postUtme / 2);
      document.getElementById("result").textContent = `Your Aggregate Score is: ${aggregate.toFixed(2)}%`;
    }

    function filterCourses() {
      const input = document.getElementById("filter");
      const filter = input.value.toLowerCase();
      const table = document.getElementById("cutoffTable");
      const rows = table.getElementsByTagName("tr");

      for (let i = 1; i < rows.length; i++) {
        const cells = rows[i].getElementsByTagName("td");
        const course = cells[1]?.textContent.toLowerCase() || "";
        if (course.includes(filter)) {
          rows[i].style.display = "";
        } else {
          rows[i].style.display = "none";
        }
      }
    }
  </script>
